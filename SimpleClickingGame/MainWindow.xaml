<Window x:Class="SimpleClickingGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleClickingGame"
        mc:Ignorable="d"
        Title="Clickeo Simple" Height="450" Width="800">
    <Canvas Name="MyCanvas" MouseLeftButtonDown="ClickOnCanvas" Background="Gray">

        <Label Name="txtPuntuacion" FontSize="20" FontWeight="ExtraBold" Foreground="DarkRed" Content="Puntuación: 0" />
        <Label Name="txtPuntuacionFinal" FontSize="20" FontWeight="Bold" Foreground="DarkGreen" Content="Puntuación Final: 0" Canvas.Left="180"/>

        <Rectangle Stroke="Black" Name="salud" Width="300" Fill="Orange" Height="25" Canvas.Left="433" Canvas.Top="10" />

    </Canvas>
</Window>
